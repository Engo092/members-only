<!DOCTYPE html>
<html>
  <head>
    <title>Members Only</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="utf-8">
  </head>
  <body>
    <header>
        <% if (locals.currentUser !== undefined) {%>
            <p class="greeting"><span>Hello,</span> <%= locals.currentUser.username %></p>
        <% } %>
        <h1>Private Club</h1>
        <% if (locals.currentUser !== undefined) {%>
        <a href="/log-out">Log Out</a>
        <% } %>
    </header>
    <div class="content">
      <h2>Join Club</h2>
      <% if (locals.currentUser !== undefined) {%>
        <% if (locals.currentUser.membership_status == 'member') { %>
          <p>You are already a club member.</p>
        <% } else { %>
          <form method="POST" action="">
              <legend for="password">Enter the Secret Password</legend>
              <input type="password" name="password" placeholder="Password" required>
              <button type="submit" class="submit" name="login">Join</button>
          </form>
        <% } %>
      <% } else { %>
            <p>Please Log In before joining the club.</p>
      <% } %>

      <% if(locals.errors !== undefined) { %>
        <ul class="errors">
        <% for (let i = 0; i < errors.length; i++) {%>
          <li> <%= errors[i].msg %> </li>
        <% } %>
      <% } %>

      <% if(locals.mismatchErrors !== undefined) { %>
        <ul class="errors">
          <li> <%= mismatchErrors[mismatchErrors.length-1] %>
      <% } %>
    </div>
  </body>
</html>
